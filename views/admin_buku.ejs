<html>
    <body>
        <h1>List Buku</h1>
        <div class="container">
            
            <a href="/add" class="btn btn-sm btn-primary">Tambah Buku</a><br>
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th>Buku</th>
                        <th>Harga ($)</th>
                        <th>Stok</th>
                        <th>action</th>
                    </tr>
                </thead>
                <tbody>
                    <% buku.forEach(function(buku){ %>
                        <tr>
                            <td><%= buku.nama_buku %></td>
                            <td><%= buku.harga %></td>
                            <td><%= buku.stok %></td>
                            <td>
                                <a href="edit/<%= buku.id_buku %>" class="btn btn-sm btn-primary">Edit</a>
                                <a href="delete/<%= buku.id_buku %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </body>
</html>